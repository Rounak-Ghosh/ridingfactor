{
    "version": 2,
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/",
        "dest": "frontend/index.html"
      },
      {
        "src": "/public/(.*)",
        "dest": "frontend/public/$1"
      },
      {
        "src": "/(.*)",
        "dest": "backend/server.js"
      }
    ]
  }